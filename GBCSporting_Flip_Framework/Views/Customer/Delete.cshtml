@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}


<div class="container my-4 mx-auto">
    <div class="card mx-auto  border-dark" style="width: 20rem;">
      <div class="card-body text-center bg-black text-white h-auto">
          <span class="card-header"><i class="fa-solid fa-user fa-lg" style="font-size: 3.5rem;"></i></span>
      </div>
      <div class="card-body">
        <h5 class="card-title">Confirm Delete</h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.FirstName @Model.LastName</li>
        <li class="list-group-item">@Model.Address</li>
        <li class="list-group-item">@Model.City</li>
        <li class="list-group-item">@Model.State</li>
        <li class="list-group-item">@Model.PostalCode</li>
        <li class="list-group-item">@Model.Country.CountryName</li>
        <li class="list-group-item">@Model.CustEmail</li>
        <li class="list-group-item">@Model.CustPhone</li>
      </ul>
      <div class="card-body text-center bg-black">
        <form asp-controller="Customer" asp-action="Delete" method="post">
            <input type="hidden" asp-for="CustomerId"/>
            <p class="d-inline-flex my-auto">
                <button type="submit" class="btn formbuttoncircle"><i class="fa-solid fa-circle-check fa-lg" style="color:black;"></i></button>
                <button class="btn formbuttoncircle" asp-controller="Customer" asp-action="Index"><i class="fa-solid fa-xmark fa-lg" style="color:black; font-size: 22px;"></i></button>
            </p>
        </form>
      </div>
    </div>
</div>


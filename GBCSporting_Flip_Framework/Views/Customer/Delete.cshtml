@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}
<h2>Confirm Deletion</h2>
<table class="table table-light table-striped table-hover table-responsive tablestyle">
    <tr>
        <th>Full Name</th>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>City</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>State</th>
        <td>@Model.State</td>
    </tr>
    <tr>
        <th>Postal Code</th>
        <td>@Model.PostalCode</td>
    </tr>
    <tr>
        <th>Country</th>
        <td>@Model.Country.CountryName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.CustEmail</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.CustPhone</td>
    </tr>
</table>

<form asp-controller="Customer" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId"/>
    <button type="submit">Delete</button>
    <a asp-controller="Customer" asp-action="Index">Cancel</a>
</form>
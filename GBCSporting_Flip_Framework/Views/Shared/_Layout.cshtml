@{
    string controller = ViewContext.RouteData.Values["controller"].ToString();
    string action = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBCSporting_Flip_Framework</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GBCSporting_Flip_Framework.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/bfc4362999.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="siteNavigation" role="banner">
        <nav class="navbar navbar-expand-lg" style="padding: 0;">
          <div class="container-fluid" style="background-color: black; padding: 0;">
              <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                   <div class="logo-image">
                           <img src="/images/logo2.png" class="img-fluid" alt="logo">
                   </div>
              </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
              <span class="navbar-toggler-icon">
                  <i class="fas fa-bars" style="color:#f4f1de; font-size:28px;"></i>
              </span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                 <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Flip Framework</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                  </div>
              <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                     <li class="nav-item navlist-item"><a class="nav-link navfont @(controller == "Home" && action == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont @(controller == "Product" && (action == "Index" || action == ViewBag.Action) ? "active" : "")" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont" asp-area="" asp-controller="Technician" asp-action="Index">Technicians</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont" asp-area="" asp-controller="Incident" asp-action="Index">Incidents</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont disabled" asp-area="" asp-controller="Registration" asp-action="Index" >Registration</a></li>
                     <li class="nav-item navlist-item"><a class="nav-link navfont disabled" asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
    </header>
        
    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-auto">
        <div class="container">
            <div class="row align-items-center justify-content-between footer-row">
                <div class="col-md-6">
                    <h5>To keep up to date on our products - Subscribe</h5>
                    <h3>Start using Flip Framework Today!</h3>
                <form>
                    <fieldset class="form-group dk-footer-form">
                            <input type="email" class="form-control" placeholder="Email" />
                            <button type="submit">
                                <i class="fa fa-send"></i>
                            </button>
                    </fieldset>
                </form>
                </div>
            </div>
            <div class="row footer-row">
                <div class="col-4">
                    <h5>Navigation</h5>
                    <ul class="list-unstyled">
                        <li class=""><a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class=""><a class="" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                        <li class=""><a class="" asp-area="" asp-controller="Technician" asp-action="Index">Technicians</a></li>
                        <li class=""><a class="" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a></li>
                        <li class=""><a class="" asp-area="" asp-controller="Incident" asp-action="Index">Incidents</a></li>
                        <li class=""><a class="p-0 nav-link disabled" asp-area="" asp-controller="Registration" asp-action="Index">Registration</a></li>
                        <li class=""><a class="p-0 nav-link disabled" asp-area="" asp-controller="About" asp-action="Index">About</a></li>  
                         
                    </ul>
                </div>
                <div class="col-4 mb-3">
                    <h5>Important Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="">Documentation</a></li>
                        <li><a href="">Support</a></li>
                        <li><a href="">Legal Terms</a></li>
                            
                        </ul>
                    </div>
                    <div class="col-4 mb-3">
                     <h5>Contact Us</h5>
                    <ul class="nav">
                        <li class="nav-item"><a href="#" class="nav-link pl-0"><i class="fa fa-facebook fa-lg"></i></a></li>
                        <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-twitter fa-lg"></i></a></li>
                        <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-github fa-lg"></i></a></li>
                        <li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-instagram fa-lg"></i></a></li>
                    </ul>
                    <h6>Phone</h6>
                    <p>416-555-2115</p>
                    <h6>Email</h6>
                    <address><a href="mailto:info@flip.com">info@flip.com</a></address>
                    </div>
                </div>
                <div class="row footer-row border-top">
                    <div class="col-12 text-center">
                          &copy; 2022 - GBCSporting_Flip_Framework - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
              </div> 
            
    </footer> 

    
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
